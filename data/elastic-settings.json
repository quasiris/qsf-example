{
  "mappings": {
    "_doc": {
      "properties": {
        "gtin_name": {
          "type": "keyword",
          "fields": {
            "suggest": {
              "type": "text",
              "analyzer": "suggest_analyzer",
              "search_analyzer": "suggest_query_analyzer"
            }
          }
        }
      }
    }
  },
  "settings": {
    "analysis": {
      "char_filter": {
        "special_char_filter": {
          "type": "mapping",
          "mappings": [
            "ß => ss",
            "ö => oe",
            "ü => ue",
            "ä => ae",
            "Ö => oe",
            "Ü => ue",
            "Ä => ae"
          ]
        }
      },
      "analyzer": {
        "suggest_query_analyzer": {
          "char_filter": [
            "special_char_filter"
          ],
          "tokenizer": "standard",
          "filter": [
            "lowercase"
          ]
        },
        "suggest_analyzer": {
          "char_filter": [
            "special_char_filter"
          ],
          "tokenizer": "suggest_tokenizer",
          "filter": [
            "lowercase"
          ]

        }
      },
      "tokenizer": {
        "suggest_tokenizer": {
          "type": "edge_ngram",
          "min_gram": 1,
          "max_gram": 50,
          "token_chars": [
            "letter",
            "digit"
          ]
        }
      }
    }
  }
}